extends layout

block content
  section.h-100vh.gradient-form
      .container.py-5.h-100
          .row.d-flex.justify-content-center.align-items-center.h-100
              .col-xl-10
                  .card.rounded-3.text-black
                      .row.g-0
                          .col-lg-12
                              .card-body.p-md-5.mx-md-4
                                  .text-center
                                      //-img(src='', style='width: 185px;', alt='logo')
                                      h4.mt-1.mb-5.pb-1 Student Planner - Registration
                                      form(role='form', action="/register", method="post")
                                          .form-group
                                              label.form-label.mt-4 Enter your details:
                                              .form-floating.mb-3
                                                  input#floatingInput.form-control(type='email', name="username" placeholder='name@example.com')
                                                  label(for='floatingInput') Email address
                                              .form-floating.mb-3
                                                  input#floatingPassword.form-control(type='password', name="password", placeholder='Password', autocomplete='off')
                                                  label(for='floatingPassword') Password
                                          button.btn.btn-primary.mb-3.mt-3(type='submit') Register
                                      .d-flex.align-items-center.justify-content-center.pb-4
                                          p.mb-0.me-2 Already have an account?
                                          form(role='form', action="/", method="get")
                                              button.btn.btn-primary(type='submit')
                                                  | Login





