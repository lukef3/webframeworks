extends layout
block content
  section.h-100vh.gradient-form
    .container.py-5.h-100
      .row.d-flex.justify-content-center.align-items-center.h-100
        .col-xl-10
          .card.rounded-3.text-black
            .row.g-0
              .col-lg-6
                .card-body.p-md-5.mx-md-4
                  .text-center
                    //-img(src='images\logo.png', style='width: 185px;', alt='logo')
                    h4.mt-1.mb-5.pb-1 Student Planner
                    form(action='/tasks')
                      .form-group
                        label.form-label.mt-4 Enter your details:
                        .form-floating.mb-3
                          input#floatingInput.form-control(type='email', placeholder='name@example.com')
                          label(for='floatingInput') Email address
                        .form-floating
                          input#floatingPassword.form-control(type='password', placeholder='Password', autocomplete='off')
                          label(for='floatingPassword') Password
                      button.btn.btn-primary.mb-3.mt-3(type='submit') Login
                    .d-flex.align-items-center.justify-content-center.pb-4
                      p.mb-0.me-2 Don&apos;t have an account?
                      form(action='/register')
                        button.btn.btn-primary(type='submit')
                          | Register
              .col-lg-6.d-flex.align-items-center.gradient-custom-2
                .text-white.px-3.py-4.p-md-5.mx-md-4
                  h4.mb-4 For students, by students
                  p.small.mb-0
                    | Stay organised with the best student planner on the planet...


